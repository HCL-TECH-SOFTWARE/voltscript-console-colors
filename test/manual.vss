Option Declare
Option Public
Use "../src/ConsoleColors"

Sub Initialize
    Print CONSOLE_COLOR_BLUE & "Blue"
    Print CONSOLE_COLOR_CYAN & "Cyan"
    Print CONSOLE_COLOR_GREEN & "Green"
    Print CONSOLE_COLOR_MAGENTA & "Magenta"
    Print CONSOLE_COLOR_RED & "Red"
    Print CONSOLE_COLOR_WHITE & "White"
    Print CONSOLE_COLOR_YELLOW & "Yellow"
    Print CONSOLE_BACKGROUND_COLOR_BLUE & "Blue background"
    Print CONSOLE_BACKGROUND_COLOR_CYAN & "Cyan background"
    Print CONSOLE_BACKGROUND_COLOR_GREEN & "Green background"
    Print CONSOLE_BACKGROUND_COLOR_MAGENTA & "Magenta background"
    Print CONSOLE_BACKGROUND_COLOR_RED & "Red background"
    Print CONSOLE_BACKGROUND_COLOR_WHITE & "White background"
    Print CONSOLE_COLOR_BLACK & "Black on white"
    Print CONSOLE_BACKGROUND_COLOR_YELLOW & "Yellow background"
    Print CONSOLE_COLOR_GREEN & "Green on Yellow"
    Print CONSOLE_BACKGROUND_COLOR_BLACK & "Black background"
    Print CONSOLE_BACKGROUND_COLOR_BLUE & "Blue background"
    Print "The next bit should be " & CONSOLE_ATTR_BOLD & "Bold"
    Print CONSOLE_ATTR_NO_BOLD & "Not bold"
    Print CONSOLE_ATTR_UNDERSCORE & "Underscored"
    Print CONSOLE_ATTR_NO_UNDERSCORE & "Not underscored"
    Print CONSOLE_BACKGROUND_COLOR_DEFAULT & "Green on default"
    Print CONSOLE_BACKGROUND_COLOR_BLUE & CONSOLE_COLOR_DEFAULT & "Default on blue"
    Print CONSOLE_BACKGROUND_COLOR_BLUE & CONSOLE_COLOR_RED & "Cyan on Blue"
    Print CONSOLE_DEFAULT & "Back to defaults"
    Print Chr(27) & "[36m" & Chr(27) & "[44mCyan on blue"
End Sub